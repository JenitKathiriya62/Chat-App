<%- include('layouts/header.ejs') %>

<div class="container">

    <div>
            <img src="/<%= group.image %>" alt="" width="150px" height="150px">
            <p><b><%= group.name %></b></p>

            <p><b>Total Members:- </b> <%= totalMembers %></p>

            <%
                if(avilable != 0){
                    %>
                        <p>avilable for <b><%= avilable %></b> Members Only.</p>
                    <%
                }

                if(isOwner){
                    %>
                    <p>Your Are The Creator Of the Group, You can't join</p>
                    <%
                } else if(isJoined > 0){
                    %>
                    <p>Your Are already Join the Group</p>
                    <%
                }
                else if(avilable == 0){
                    %>
                    <p>Group already Full.</p>
                    <%
                }

                else{

                    %>
                    <button class="btn btn-primary join-now" data-id="<%= group._id %>">Join Now</button>
                    <%
                }



            %>

    </div>


</div>




<%- include('layouts/footer.ejs') %>
