
<h1>Log In</h1>

<form action="" method="post">
  <input type="email" name="email" placeholder="Enter Email" required />
  <br /><br />
  <input
    type="password"
    name="password"
    placeholder="Enter password"
    required
  />
  <br /><br />
  <input type="submit" value="Login" />
</form>

<% if(typeof message !== 'undefined'){ %>
  <p style="color: red"><%= message %></p>
  <% } %>